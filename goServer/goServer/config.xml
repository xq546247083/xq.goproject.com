<root>
	<!--基础配置-->
	<BaseConfig>
		<!--WebServer监听的地址-->
		<WebListenAddress>:8883</WebListenAddress>
		<!--RpcServer监听的地址-->
		<RPCListenAddress>:8884</RPCListenAddress>
	</BaseConfig>

	<!--日志配置-->
	<LogConfig>
		<!--是否Debug模式-->
		<IsDebug>true</IsDebug>
		<!--日志文件夹-->
		<LogPath>Log</LogPath>
		<!--是否记录info日志-->
		<LogInfoFlag>true</LogInfoFlag>
		<!--是否记录Debug日志-->
		<LogDebugFlag>true</LogDebugFlag>
		<!--是否记录Warn日志-->
		<LogWarnFlag>true</LogWarnFlag>
		<!--是否记录Error日志-->
		<LogErrorFlag>true</LogErrorFlag>
		<!--是否记录Fatal日志-->
		<LogFatalFlag>true</LogFatalFlag>
	</LogConfig>

	<!--网站配置-->
	<WebConfig>
		<!--网站首页-->
		<WebMainPath>true</WebMainPath>
		<!--首页-->
		<IndexPage>Log</IndexPage>
		<!--404页面-->
		<Error404Page>true</Error404Page>
		<!--500错误页面-->
		<Error500Page>true</Error500Page>
	</WebConfig>

	<!--数据库连接字符串-->
	<DBConnection>
		<WebServer MaxOpenConns="10" MaxIdleConns="5">
			<![CDATA[
				root:moqikaka3311@tcp(10.1.0.10:3311)/gsc_guild?charset=utf8&parseTime=true&loc=Local&timeout=60s
			]]>	
		</WebServer>
	</DBConnection>
</root>