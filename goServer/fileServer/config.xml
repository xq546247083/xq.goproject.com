<root>
	<!--基础配置-->
	<BaseConfig>
		<!--WebServer监听的地址-->
		<WebListenAddress>:8882</WebListenAddress>
	</BaseConfig>

	<!--文件配置-->
	<FileConfig>
		<!--上传保存路径-->
		<UploadPath>./upload/</UploadPath>
	</FileConfig>

	<!--服务器配置-->
	<ServerConfig>
		<!--GoServerWebAddress的地址-->
		<GoServerWebAddress>http://localhost:8883/</GoServerWebAddress>
	</ServerConfig>

	<!--日志配置-->
	<LogConfig>
		<!--是否Debug模式-->
		<IsDebug>true</IsDebug>
		<!--日志文件夹-->
		<LogPath>Log</LogPath>
		<!--是否记录info日志-->
		<LogInfoFlag>true</LogInfoFlag>
		<!--是否记录Debug日志-->
		<LogDebugFlag>true</LogDebugFlag>
		<!--是否记录Warn日志-->
		<LogWarnFlag>true</LogWarnFlag>
		<!--是否记录Error日志-->
		<LogErrorFlag>true</LogErrorFlag>
		<!--是否记录Fatal日志-->
		<LogFatalFlag>true</LogFatalFlag>
	</LogConfig>
</root>